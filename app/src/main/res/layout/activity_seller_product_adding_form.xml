<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/backgreen"
    tools:context=".seller_product_adding_form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="75dp">

        <include layout="@layout/seller_product_adding_tool_bar"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="64dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:layout_weight="2"


                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:background="@color/backgreen"

                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:background="@color/backgreen"
                            android:backgroundTint="@color/backgreen"
                            android:elevation="0dp"
                            android:layout_height="wrap_content"

                            >

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@color/backgreen"
                                android:scaleType="centerCrop"
                                android:src="@drawable/imageaddicon"

                                />






                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/img1"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/backgreen"
                            android:elevation="0dp"
                            android:background="@color/backgreen"

                            >

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:background="@color/backgreen"
                                android:src="@drawable/imageaddicon"

                                />






                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/img2"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/backgreen"
                            android:elevation="0dp"
                            android:background="@color/backgreen"

                            >

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:background="@color/backgreen"
                                android:src="@drawable/imageaddicon"

                                />






                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/img3"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp" />


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/productCode"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableStart="@drawable/productcode"
                        android:textSize="25sp"
                        android:ems="20"
                        android:background="@drawable/custominput"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:hint="@string/SelectProductCategory"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/autocompletetext"
                            android:layout_width="match_parent"
                            android:inputType="none"

                            android:background="@color/white"
                            android:layout_height="wrap_content"/>






                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/productTitel"
                        android:drawableStart="@drawable/producttitel"
                        android:textSize="25sp"
                        android:padding="10dp"
                        android:background="@drawable/custominput"

                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/productDescription"
                        android:drawableStart="@drawable/productdescription"
                        android:textSize="25sp"
                        android:padding="10dp"
                        android:drawablePadding="12dp"
                        android:background="@drawable/custominput"

                        android:ems="10"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/product_price"
                        android:drawableStart="@drawable/productprice"
                        android:textSize="25sp"
                        android:padding="10dp"
                        android:drawablePadding="12dp"
                        android:background="@drawable/custominput"

                        android:ems="10"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/selectUnitType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/autocompletetext1"
                            android:layout_width="match_parent"
                            android:inputType="none"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:background="@color/white"
                            android:layout_height="wrap_content"/>






                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:hint="@string/stock"
                        android:drawableStart="@drawable/stockicon"
                        android:textSize="25sp"
                        android:background="@drawable/custominput"
                        android:padding="10dp"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:layout_height="wrap_content"/>



                </LinearLayout>




            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/greenveg"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"


                android:paddingRight="40dp"
                android:paddingBottom="10dp"
                android:text="@string/reset"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:paddingLeft="40dp"
                android:layout_marginLeft="6dp"
                android:paddingRight="40dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:id="@+id/submit"

                android:backgroundTint="@color/greenveg"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>