<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/secondary_color"
                android:padding="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="16dp"
                    android:layout_alignParentStart="true"
                    android:text="Agri Event Title :" />

                <TextView
                    android:id="@+id/textView23"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView22"
                    android:layout_alignParentStart="true"
                    android:text="Place :" />

                <TextView
                    android:id="@+id/textView30"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView23"
                    android:layout_alignParentStart="true"
                    android:text="Date :" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView30"
                    android:layout_alignParentStart="true"
                    android:text="Time :" />

                <TextView
                    android:id="@+id/eventTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventDate2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView33"
                    android:text="8:30 AM"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/eventDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventPlace2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView30"
                    android:text="03/20"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/eventTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView22"
                    android:text="Customer Lecture"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/eventPlace2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventTitle2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView23"
                    android:text="New Building"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView33"
                    android:text="ID:"
                    android:textColor="@color/secondary_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/eventID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventTime2"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView35"
                    android:text=""
                    android:textColor="@color/secondary_color"
                    android:textSize="16dp" />

            </RelativeLayout>



</androidx.cardview.widget.CardView>